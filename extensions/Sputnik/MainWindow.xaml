<Window x:Class="Sputnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Client" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- A row for buttons, a row for the DataGrid -->
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Button row -->
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Content="Load Items" Click="LoadItemsButton_Click" Margin="5"/>
            <Button Content="Create Item" Click="CreateItemButton_Click" Margin="5"/>
            <Button Content="Update Item" Click="UpdateItemButton_Click" Margin="5"/>
            <Button Content="Delete Item" Click="DeleteItemButton_Click" Margin="5"/>
        </StackPanel>

        <!-- DataGrid to show items -->
        <DataGrid x:Name="DataGridItems" 
                  Grid.Row="1" 
                  Margin="5"
                  AutoGenerateColumns="True" 
                  IsReadOnly="True"
                  SelectionMode="Single"/>
    </Grid>
</Window>
